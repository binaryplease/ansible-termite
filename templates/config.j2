[options]
font = RobotoMono 14px
audible_bell        = false
scroll_on_output    = false
scroll_on_keystroke = true
allow_bold          = true
mouse_autohide      = false
dynamic_title       = true
urgent_on_bell      = true
clickable_url       = true
scrollback_lines    = 10000
search_wrap         = true

# $BROWSER is used by default if set, with xdg-open as a fallback
browser = xdg-open

[colors]
# Base16 {{scheme}}
# Author: {{author}}

foreground          = #{{base05}}
foreground_bold     = #{{base06}}
cursor              = #{{base0D}}
cursor_foreground   = #{{base00}}
background          = #{{base00}}

# 16 color space

# Black, Gray, Silver, White
color0  = #{{base00}}
color8  = #{{base03}}
color7  = #{{base05}}
color15 = #{{base07}}

# Red
color1  = #{{base08}}
color9  = #{{base08}}

# Green
color2  = #{{base0B}}
color10 = #{{base0B}}

# Yellow
color3  = #{{base0A}}
color11 = #{{base0A}}

# Blue
color4  = #{{base0D}}
color12 = #{{base0D}}

# Purple
color5  = #{{base0E}}
color13 = #{{base0E}}

# Teal
color6  = #{{base0C}}
color14 = #{{base0C}}

# Extra colors
color16 = #{{base09}}
color17 = #{{base0F}}
color18 = #{{base01}}
color19 = #{{base02}}
color20 = #{{base04}}
color21 = #{{base06}}
